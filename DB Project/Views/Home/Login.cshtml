                <div class="login">
                    &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
                    <input type="submit" name="signin" id="signin" class="loginbutton" value="Log in" />
                    <br>
                    <label>@Model</label>
                </div>
            </div>
            <div class="signup">Not a member? Register Now!</div>
            <div class="register">
                <br /><br /><br /><br /><br />
                &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <button onclick="location.href = 'http://localhost:10587/Home/SignUp'" type="button" class="registerbutton">SIGN UP</button>
            </div>
            <img src="~/Content/img3.jpg" class="bottomblock" />
            <div class="contactus">
