@{
    Layout = null;
}
@model string
<!DOCTYPE html>

<head>
    <meta charset="UTF-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/BookdisplayStyleSheet.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container" id="form">
        <p id="head"></p>
        <form id="formS" action="../Home/SearchBook" method="post">
            <p class="searchheading">
                <input type="text" placeholder="Search Title / Authour" class="search" name='SEARCH' id='SEARCH' required="required" /><span class="error"></span>
                <input type="submit" name="submitbuttom" id="submitbutton" class="register" value="Search" form="formS" />
                <label for="submitbutton">
                    <img src="~/Content/searchicon.png" class="searchicon" />
                </label>
            </p>
        </form>
    </div>
        <form id="form1" action="../Home/DisplayBook" method="post">
            <div>
                <h1>Illumination</h1>
                <img src="~/Content/logo.png" class="logo" />
                <div class="navbar">
                    <a href="http://localhost:10587/Home/Home">Home</a>
                    <a href="http://localhost:10587/Home/RequestaBook">Request A Book</a>
                    <a href="http://localhost:10587/Home/DisplayCart">View Cart</a>
                    <a href="http://localhost:10587/Home/FAQ">FAQ</a>
                    <a href="http://localhost:10587/Home/Recommendations">Recommendations</a>
                </div>
                <hr style="color:brown" />
            </div>
            <h2>Title: @Session["Title"].ToString()</h2>
            <h3>Author: @Session["Author"].ToString()</h3>
            <h4>Price: @Session["price"].ToString()</h4>
            <h5>Delivery: 5-7 working days </h5>
            <h6>Rating: @Session["rate"].ToString()</h6>
            <div class="bookimage">
                <img src="@Url.Content(@Session["img"].ToString())" alt="" />
                </div>
                <img src="~/Content/img3.jpg" class="bottomblock" />
                <div class="contactus">
                    About Us<br />
                    <a href="http://localhost:10587/Home/Home"><p class="subs">Contact Us</p></a>
                    <a href="http://localhost:10587/Home/TermsAndConditions"><p class="subs">Terms and Conditions</p></a>
                </div>
                <div class="connect">
                    Connect<br /><br />
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
                    <a href="#" onclick="location.href='http://www.facebook.com'" class="fa fa-facebook"></a>
                    <a href="#" onclick="location.href='http://www.twiiter.com'" class="fa fa-twitter"></a>
                    <a href="#" onclick="location.href='http://www.instagram.com'" class="fa fa-instagram"></a>
                </div>
        </form>
        <form id="form2" action="../Home/AddToCart" method="post">
            <div class="cart">
                <p><button type="submit" name="AddToCart" id="AddToCart" value="@Session["mailbook"].ToString()" form="form2">Add to Cart</button></p>
            </div>
        </form>
        <form id="form2" action="../Home/UpdateRating" method="post">
            <div class="ratebook">Rate the book: </div>
            <div class="rate">
                <input type="submit" id="rating10" name="rating" value="5.0" /><label for="rating10" title="5 stars"></label>
                <input type="submit" id="rating9" name="rating" value="4.5" /><label class="half" for="rating9" title="4 1/2 stars"></label>
                <input type="submit" id="rating8" name="rating" value="4.0" /><label for="rating8" title="4 stars"></label>
                <input type="submit" id="rating7" name="rating" value="3.5" /><label class="half" for="rating7" title="3 1/2 stars"></label>
                <input type="submit" id="rating6" name="rating" value="3.0" /><label for="rating6" title="3 stars"></label>
                <input type="submit" id="rating5" name="rating" value="2.5" /><label class="half" for="rating5" title="2 1/2 stars"></label>
                <input type="submit" id="rating4" name="rating" value="2.0" /><label for="rating4" title="2 stars"></label>
                <input type="submit" id="rating3" name="rating" value="1.5" /><label class="half" for="rating3" title="1 1/2 stars"></label>
                <input type="submit" id="rating2" name="rating" value="1.0" /><label for="rating2" title="1 star"></label>
                <input type="submit" id="rating1" name="rating" value="0.5" /><label class="half" for="rating1" title="1/2 star"></label>
            </div>
            <h22>@Session["errmsg"].ToString()</h22>
       </form>
    </div>
</body>